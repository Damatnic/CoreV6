# Copy this file to .env.local for development
# For Vercel deployment, add these variables to your Vercel dashboard

# Database (Use PlanetScale, Supabase, or Vercel Postgres for production)
DATABASE_URL="postgresql://user:password@localhost:5432/astralcore_v5?schema=public"

# NextAuth.js (REQUIRED)
NEXTAUTH_URL=https://your-app-name.vercel.app
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
# Generate secret: openssl rand -base64 32

# Vercel-specific
VERCEL_ENV=production
VERCEL_URL=your-app-name.vercel.app

# Encryption Keys (REQUIRED - Generate secure keys for production)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=generate-with-openssl-rand-hex-32
# Generate with: openssl rand -hex 16
ENCRYPTION_IV=generate-with-openssl-rand-hex-16

# API Keys (for AI features)
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Crisis Hotline Integration
CRISIS_TEXT_LINE_API=
SUICIDE_PREVENTION_LIFELINE_API=

# Email Service (Optional - for helper accounts)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@astralcore.app

# Real-time Features
WEBSOCKET_URL=ws://localhost:3001

# Analytics (Optional - Privacy-focused)
ANALYTICS_ENABLED=false
PLAUSIBLE_DOMAIN=

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_TIMEOUT_HOURS=24

# Feature Flags
ENABLE_AI_THERAPY=true
ENABLE_CRISIS_DETECTION=true
ENABLE_PEER_SUPPORT=true
ENABLE_PROFESSIONAL_SERVICES=false
ENABLE_OFFLINE_MODE=true

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# Content Moderation
MODERATION_API_KEY=
AUTO_MODERATION_ENABLED=true

# Multi-language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,zh,ar